[mysql]
host = localhost
port = 3306
user = root
password = password
database = noveler

[postgresql]
host = localhost
port = 5432
user = postgres
password = password
database = noveler

[default_database]
type = sqlite
database = noveler.db

[formats]
datetime = "%Y-%m-%d %H:%M:%S.%f"
date = "%Y-%m-%d"

[ollama]
url = http://localhost:11434
chat_model = nous-hermes:7b
chat_context_window = 4096
chat_memory_duration = 0
generative_model = nous-hermes:7b
generative_context_window = 4096
generative_memory_duration = 0
multimodal_model = llava:7b
multimodal_context_window = 4096
multimodal_memory_duration = 0

[export]
root = /path/to/noveler/exports
