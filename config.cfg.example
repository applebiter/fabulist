[mysql]
host = localhost
port = 3306
user = root
password = password
database = noveler

[postgresql]
host = localhost
port = 5432
user = postgres
password = password
database = noveler

[sqlite]
database = noveler.db

[formats]
datetime = "%Y-%m-%d %H:%M:%S.%f"
date = "%Y-%m-%d"

[ollama]
url = http://localhost:11434
chat_model = dolphin-phi:2.7b
generative_model = mistral-openorca:7b
multimodal_model = llava:7b
model_memory_duration = 0
context_window = 4096

[export]
root = /home/<username>/Programs/noveler/noveler/export
